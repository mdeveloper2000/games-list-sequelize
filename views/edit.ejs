<%- include("./partials/header") %>

<div class="container mt-3 w-75">
    <div class="row">
        <div class="col-8">
            <form class="border py-3 px-5 rounded">
                <input type="hidden" name="id" value="<%= game.id %>">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Game title" maxlength="50" value="<%=game.title%>">
                </div>
                <div class="mb-3">
                    <label for="year" class="form-label">Year</label>
                    <input type="text" class="form-control" name="year" id="year" placeholder="Released year" maxlength="4" value="<%=game.year%>">
                </div>
                <div class="mb-3">
                    <label for="multiplayer" class="form-label">Multiplayer</label>
                    <select class="form-select" name="multiplayer" id="multiplayer">
                        <option value="YES" <%= game.multiplayer === "YES" ? "selected" : "" %>>YES</option>
                        <option value="NO" <%= game.multiplayer === "NO" ? "selected" : "" %>>NO</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="platinum" class="form-label">Platinum</label>
                    <select class="form-select" name="platinum" id="platinum">
                        <option value="YES" <%= game.platinum === "YES" ? "selected" : "" %>>YES</option>
                        <option value="NO" <%= game.platinum === "NO" ? "selected" : "" %>>NO</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="details" class="form-label">Details</label>
                    <textarea class="form-control" name="details" id="details" maxlength="255" placeholder="Game details"><%=game.details%></textarea>
                </div>
                <div class="mb-3 d-flex justify-content-between">
                    <a href="/" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-device-hdd"></i> Update
                    </button>
                </div>
                <div class="mb-3">
                    <%- include("./partials/alert", { visible: false, message: "Title and year are required fields" }) %>
                </div>
              </form>
        </div>
        <div class="col-4 text-center">
            <div class="text-center border border-primary rounded mb-3 p-1 fs-4">
                Game Edit
            </div>
            <i class="bi bi-trophy-fill text-primary" style="font-size: 10rem;"></i>
        </div>
    </div>
</div>

<script src="/js/edit.js"></script>
    
<%- include("./partials/footer") %>